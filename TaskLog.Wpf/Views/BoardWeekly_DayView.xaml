<views:MvxWpfView 
    x:Class="TaskLog.Wpf.Views.BoardWeekly_DayView"
    x:TypeArguments="viewModels:WorkDayViewModel"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Binding;assembly=MvvmCross.Platforms.Wpf"
    xmlns:local="clr-namespace:TaskLog.Wpf.Views"
    xmlns:viewModels="clr-namespace:TaskLog.Core.ViewModels;assembly=TaskLog.Core"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" Background="AliceBlue"
    d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding Header, FallbackValue='Day Header'}"></TextBlock>
        <ListView ItemsSource="{Binding Works}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:BoardWeekly_DayView />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</views:MvxWpfView>
